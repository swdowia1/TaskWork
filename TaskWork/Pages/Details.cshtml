@page "{id}"
@model TaskWork.Pages.DetailsModel
<h1 class="text-2xl font-bold mb-4">@Model.Article.Title</h1>

<div>
    @Html.Raw(Model.RenderMarkdown(Model.Article.Content))
</div>

@if (Model.Article.ArticleTags?.Any() == true)
{
    <div class="mt-4">
        <strong>Tagi:</strong>
        @foreach (var tag in Model.Article.ArticleTags)
        {
            <span class="bg-gray-200 rounded px-2 py-1 mr-2">@tag.Tag.Name</span>
        }
    </div>
}