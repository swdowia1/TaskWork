@page
@model IndexModel
@{
    ViewData["Title"] = "Zadania i czas";
}

<!-- Pełna szerokość sekcji -->
<div class="container-fluid py-4 px-5 bg-light">
    <h2 class="mb-4 text-center">📚 Lista artykułów</h2>

    @foreach (var article in Model.lista)
    {
        <div class="card shadow-sm border-0 rounded-4 mb-4">
            <div class="card-body">
                <h5 class="card-title text-primary">@article.Title</h5>

                <div class="markdown-body mt-2">
                    @Html.Markdown(article.Content)
                </div>

                <div class="mt-3">
                    @foreach (var tag in article.ArticleTags.Select(at => at.Tag))
                    {
                        <span class="badge bg-info text-dark me-1 mb-1">@tag.Name</span>
                    }
                </div>

                <a asp-action="Details" asp-route-id="@article.Id"
                   class="btn btn-outline-primary btn-sm mt-3">
                    Czytaj więcej
                </a>
            </div>
        </div>
    }
</div>