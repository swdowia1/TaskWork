    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Dodaj czas dla zadania: <span type="text" id="title" /></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">



                <div class="mb-3">
                    <label class="form-label">Czas [min]</label>
                    <input type="text" class="form-control" id="czas" name="czas" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                <button type="submit" class="btn btn-success" onclick="save()">Zapisz</button>
            </div>

        </div>
    </div>
</div>
