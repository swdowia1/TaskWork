@page "{companyid:int}/{typ}"
@model TaskWork.Pages.ZadModel


<h2>Zadania dla firmy</h2>

@foreach (var task in Model.lista)
{
    <div class="card mb-3">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <strong>@task.Title</strong>
                (Łącznie: @task.TotalMinutes min = @classFun.FormatMinutes(task.TotalMinutes))
            </div>
            <span>
                <button title="usuwanie" type="button"
                        class="btn btn-sm btn-warning"
                        onclick="deleteTask(@task.TaskId,'@task.Title')">
                    -
                </button>
                <button type="button"
                        class="btn btn-sm btn-primary"
                        onclick="addtime(@task.TaskId,'@task.Title')">
                    +
                </button>
            </span>
        </div>
        <div class="card-body p-0">
            <table class="table table-sm mb-0">
                <thead>
                    <tr>
                        <th>Data</th>
                        <th>Czas [min]</th>
                        <th>Czas [h]</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entry in task.TimeEntries)
                    {
                        <tr>
                            <td>@entry.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@entry.Minutes</td>
                            <td>@classFun.FormatMinutes(entry.Minutes)</td>
                            <td>
                                <button title="usuwanie czas" type="button"
                                        class="btn btn-sm btn-warning"
                                        onclick="deleteTaskTime(@entry.Id)">
                                    -
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<!-- Modal -->
